<UserControl x:Class="Twiddler.Views.TweetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border BorderThickness="4"
	        CornerRadius="4"
	        BorderBrush="#FF6C99CE"
	        Background="#FFCEE6FF">
		<StackPanel Orientation="Horizontal">
			<StackPanel Margin="4">
				<Image Source="{Binding User.ProfileImageUrl}"
				       Width="50"
				       Height="50"
				       HorizontalAlignment="Left" />
			</StackPanel>
			<DockPanel Margin="4">
				<DockPanel DockPanel.Dock="Bottom">
					<TextBlock Text="{Binding CreatedDate}"
					           FontStyle="Italic"
					           TextAlignment="Right"
                               VerticalAlignment="Bottom"
					           FontSize="8"
					           DockPanel.Dock="Right" />
					<TextBlock Text="{Binding User.Name}"
					           DockPanel.Dock="Left"
					           HorizontalAlignment="Left"
					           FontWeight="Bold" />
					<TextBlock Text="{Binding User.FollowersCount}"
					           Margin="2,0,0,0"
					           DockPanel.Dock="Left"
					           HorizontalAlignment="Left"
					           FontSize="10"
					           FontStyle="Italic" />
				</DockPanel>
				<TextBlock Text="{Binding Status}"
				           MaxWidth="300"
				           TextWrapping="Wrap"
				           TextAlignment="Justify" />
			</DockPanel>
		</StackPanel>
	</Border>
</UserControl>