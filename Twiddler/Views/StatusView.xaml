<UserControl x:Class="Twiddler.Views.StatusView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="clr-namespace:Caliburn.PresentationFramework.Views;assembly=Caliburn.PresentationFramework">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Authorization}" VerticalAlignment="Center" Margin="4" />
        <Button Command="{Binding AuthorizeCommand}" Content="Authorize" Margin="4" />
        <Button Command="{Binding DeauthorizeCommand}" Content="Deauthorize" Margin="4" />
        <ContentControl cal:View.Model="{Binding RequestMeter}" Margin="4" />
    </StackPanel>
</UserControl>