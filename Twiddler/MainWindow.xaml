        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="300"
        Width="518"
        Loaded="Window_Loaded">
    <Grid>
        <Label Margin="12,92,12,112"
               Name="AuthStatusLabel"
               FontSize="30"
               Foreground="Red"
               ForceCursor="True"
               HorizontalContentAlignment="Center">Not Authorized</Label>
        <Button Height="23"
                Margin="212,0,209,62"
                Name="tryAgainButton"
                VerticalAlignment="Bottom"
                Click="tryAgainBtn_Click"
                Visibility="Hidden">Try Again</Button>
    </Grid>
</Window>